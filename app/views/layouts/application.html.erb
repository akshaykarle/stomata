<!DOCTYPE html>
<html>
<head>
  <title>Stomata</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner header">
      <div class="container-fluid">
        <a class="brand" href="/"><%= ENV['APP_TITLE'] || 'Stomata' %></a>
      </div>
    </div>
  </div>
  
  <div class="container-fluid">
    <div class="row-fluid">
      <% if content_for?(:sidebar) %>
      <div class="row-fluid">
        <div class="span9 content">
          <%= yield %>
        </div>
        <div class="span3">
          <div class="well sidebar sidebar-nav">
            <%= yield :sidebar %>
          </div>
        </div>
      </div>
      <% else %>
        <div class="row-fluid">
          <div class="span12 content">
            <%= yield %>
          </div>
        </div>
      <% end %>
    </div>
  </div>    

</body>
</html>
